---
import Base from './Base.astro';
import Error404Icon from '~/components/icons/Error404.astro';
---
<Base
    title={['Not Found']}
    canonical="!remove"
>
    <div id="error-page">
        <Error404Icon />
        <h1>Not Found</h1>
        <p>Sorry, the page you are looking for does not exist.</p>
        <a href="/">Back to Home</a>
    </div>
</Base>

<style is:global lang="scss">
    #error-page {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        flex: 1;

        > :global(svg) {
            height: 10rem;
            width: 10rem;
            color: var(--text-dim);

            animation: bounce 5s infinite;
        }

        @keyframes bounce {
            0%,
            20%,
            50%,
            80%,
            100% {
                transform: translateY(0);
                color: var(--text);
            }
            40% {
                transform: translateY(-20px);
                color: var(--text-dim);
            }
            60% {
                transform: translateY(-10px);
                color: var(--text-dim);
            }
        }

        h1 {
            font-size: 2rem;
            margin-top: 1rem;
        }

        p {
            font-size: 1.2rem;
            color: var(--text-dim);
        }
    }
</style>
