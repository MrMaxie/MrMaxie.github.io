---
import type { ComponentProps } from 'astro/types';
import { slide, ViewTransitions } from 'astro:transitions';

import '@fontsource-variable/fira-code';
import '@fontsource-variable/karla';

import Nav from '~/components/sections/Nav.astro';
import Header from '~/components/sections/Header.astro';
import Footer from '~/components/sections/Footer.astro';
import Breadcrumbs from '~/components/Breadcrumbs.astro';
import { undefined } from 'astro:schema';

type Props = {
    title?: string[];
    smallerHeader?: boolean;
    description?: string;
    crumbs?: ComponentProps<typeof Breadcrumbs>['crumbs'];
    canonical?: string | '!default' | '!remove';
};

const {
    title = [],
    crumbs,
    description,
    smallerHeader = false,
    canonical = '!default',
} = Astro.props;

let canonicalUrl: string | false = false;

switch (canonical) {
    case '!default':
        canonicalUrl = `${Astro.site}${Astro.url.pathname}`;
        break;
    case '!remove':
        canonicalUrl = false;
        break;
    default:
        canonicalUrl = `${Astro.site}${canonical}`;
        break;
}

canonicalUrl = canonicalUrl && canonicalUrl.replace(/\/+/g, '/').replace(':/', '://');

---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content={description ?? "Programmer's portfolio - Maciej Mieńko"}
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="icon" href="/favicon.ico" type="image/x-icon">
        <link rel="icon" href="/favicon-16x16.png" type="image/png" sizes="16x16">
        <link rel="icon" href="/favicon-32x32.png" type="image/png" sizes="32x32">
        <link rel="sitemap" href="/sitemap-index.xml" />
        {canonicalUrl ? <link rel="canonical" href={canonicalUrl} /> : null}
        <title>{[...title, 'Maciej Mieńko'].join(' | ')}</title>
        <ViewTransitions />
    </head>
    <body>
        <main>
            <Nav />
            <Header smaller={smallerHeader} />
            <div class="main__content" transition:animate={slide({ duration: '0.5s' })}>
                {crumbs && (
                    <Breadcrumbs
                        crumbs={[
                            { label: 'Home', href: '/' },
                            ...crumbs
                        ]}
                    />
                )}
                <slot />
            </div>
            <Footer />
        </main>
    </body>
</html>

<style is:global lang="scss">
    :root {
        --background: #14171a;
        --background-variant: #282d30;
        --text: #f0f0f0;
        --text-dim: #afafbf;
        --text-accent: #66ccff;
    }

    body {
        font-family: 'Karla Variable', sans-serif;
        color: var(--text);

        padding: 0;
        margin: 0;
        background-color: var(--background);
        background: radial-gradient(
            circle at 80% 80%,
            var(--background) 40%,
            #0d0e0f 100%
        );
        background-attachment: fixed;
        font-weight: normal;
        font-size: 16px;
        min-height: 100dvh;
        position: relative;
    }

    code {
        font-family: 'Fira Code', monospace;
    }

    @media (max-width: 768px) {
        html {
            font-size: 15px;
        }
    }

    @media (max-width: 480px) {
        html {
            font-size: 14px;
        }
    }

    a {
        color: var(--text-accent);
        text-decoration: none;

        &:hover {
            text-decoration: underline;
        }
    }

    * {
        box-sizing: border-box;
    }

    *::-webkit-scrollbar-track {
        background-color: var(--background);
    }

    *::-webkit-scrollbar {
        width: 12px;
        background-color: var(--background);
    }

    *::-webkit-scrollbar-thumb {
        background-color: var(--text-dim);
    }

    main {
        margin: auto;
        padding: 1rem;
        width: 800px;
        max-width: 100%;
        color: var(--text);
        font-size: 16px;
        line-height: 1.6;
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .main__content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        flex: 1;
    }

    h1,
    h2,
    h3 {
        margin: 0;
        padding: 0;
        margin-bottom: 0;
    }
</style>
