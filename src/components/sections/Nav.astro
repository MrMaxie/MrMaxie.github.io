---
import Routes from '~/utils/routes';
import AtIcon from '../icons/At.astro';
import GithubIcon from '../icons/BrandGithub.astro';
import LinkedInIcon from '../icons/BrandLinkedin.astro';
---

<nav>
    <a href={Routes.about()}>About</a>
    <a href={Routes.articles()}>Articles</a>
    <a
        href="javascript:location='mailto:\u006d\u0069\u0065\u006e\u006b\u006f\u006d\u0061\u0063\u0069\u0065\u006a\u0040\u0067\u006d\u0061\u0069\u006c\u002e\u0063\u006f\u006d';void 0"
        aria-label="Email Link"
        class="icon-link"
    >
        <AtIcon />
    </a>
    <a
        href="https://github.com/MrMaxie"
        aria-label="Github Link"
        class="icon-link"
    >
        <GithubIcon />
    </a>
    <a
        href="https://www.linkedin.com/in/maciej-mie%C5%84ko-b0200b190/"
        aria-label="LinkedIn Link"
        class="icon-link"
    >
        <LinkedInIcon />
    </a>
</nav>

<style lang="scss">
    nav {
        padding: 1rem;
        width: 100%;
        gap: 1.5rem;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: end;
        flex-wrap: wrap;

        a {
            color: var(--text-dim);
            text-decoration: none;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: color 0.3s;

            &.icon-link,
            &[data-active='true'] {
                color: var(--text);
            }

            &:hover {
                color: var(--text-accent);
            }
        }
    }
</style>
