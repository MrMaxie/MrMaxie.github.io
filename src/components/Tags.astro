---
interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags">
    {tags.map(tag => (
        <span class="tag">{tag}</span>
    ))}
</div>

<style lang="scss">
    .tags {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;

        .tag {
            padding: 0.1rem 0.3rem;
            border-radius: 5px;
            background-color: var(--background-variant);
            font-size: 0.8rem;
        }
    }
</style>
